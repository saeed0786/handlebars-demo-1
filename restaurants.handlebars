<section>
    <h2>There are {{restaurants.length}} restaurants</h2>
    {{#each restaurants}}
        <article class="card">
            <a href="/restaurants/{{id}}"><h2>{{name}}</h2></a>
            <img class="item-img" src="{{image}}"/>
        </article>
    {{/each}}
      <div>
        <a href="/new-restaurant" class="new-restaurant-btn">Add New Restaurant!</a>
    </div>
</section>